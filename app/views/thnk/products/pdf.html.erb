<!-- app/views/layouts/pdf.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= @category %> Bulk QR Codes</title>
  <%= wicked_pdf_stylesheet_link_tag "pdf", media: "all" %>
  <style>
      body {
          font-family: Arial, sans-serif;
          padding: 20px;
          color: #333333;
      }
      h1, h2 {
          text-align: center;
      }
      .product {
          page-break-inside: avoid;
          margin-bottom: 40px;
      }
      .container {
          position: relative;
          width: 300px;
          height: 300px;
          margin: 0 auto;
      }
      .price {
          position: absolute;
          bottom: 10px;
          left: 10px;
          font-size: 24px;
          color: black;
      }
      img {
          display: block;
          margin: 0 auto;
      }
  </style>
</head>
<body>
<%= yield %>
</body>
</html>
