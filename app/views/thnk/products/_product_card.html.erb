<!-- app/views/products/_product_card.html.erb -->

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <% if product.images.attached? %>
    <%= image_tag product.images.first, class: "w-full h-48 object-cover", alt: product.title %>
  <% else %>
    <%= image_tag 'placeholder.png', class: "w-full h-48 object-cover", alt: "No Image Available" %>
  <% end %>
  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2"><%= product.title %></h3>
    <p class="text-gray-600 mb-4"><%= truncate(product.body, length: 100) %></p>
    <button data-action="click->modal#open" data-product-id="<%= product.id %>" class="mt-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      View Details
    </button>
  </div>
</div>
